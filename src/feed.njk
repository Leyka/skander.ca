---
permalink: feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ meta.title }}</title>
    <subtitle>{{ meta.description }}</subtitle>
    <link href="{{ permalink | absoluteUrl(meta.url) }}" rel="self"/>
    <link href="{{ meta.url }}"/>
    <author>
      <name>{{ meta.author }}</name>
    </author>
    <updated>{{ collections.articles | rssLastUpdatedDate }}</updated>
    <id>{{ meta.url }}/</id>
    {% for article in collections.articles | reverse %}
    {% set absolutePostUrl %}{{ article.url | url | absoluteUrl(meta.url) }}{% endset %}
      <entry>
          <title>{{ article.data.title }}</title>
          <link href="{{ absolutePostUrl }}"/>
          <updated>{{ article.date | rssDate }}</updated>
          <id>{{ absolutePostUrl }}</id>
          <content xml:lang="{{ meta.lang  }}" type="html">
            {{ article.templateContent | htmlToAbsoluteUrls(absolutePostUrl) | safe }}
          </content>
      </entry>
    {% endfor %}
</feed>
